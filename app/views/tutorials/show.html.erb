<div class="page-header">
  <h1><%=t '.title', :default => Tutorial.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= Tutorial.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @tutorial.name %></dd>
  <dt><strong><%= Tutorial.human_attribute_name(:link) %>:</strong></dt>
  <dd><%= @tutorial.link %></dd>
  <dt><strong><%= Tutorial.human_attribute_name(:cached_rating) %>: </strong></dt>
  <dd><%= @tutorial.cached_rating %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tutorial_path(@tutorial),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
