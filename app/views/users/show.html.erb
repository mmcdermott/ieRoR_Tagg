<div class="page-header">
  <h1><%=t '.title', :default => User.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= User.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @user.username %></dd>
  <dt><strong><%= User.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<div class="page-header">
  <h1><%=t '.title', :default => "Tutorial".pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Tutorial.human_attribute_name(:id) %></th>
      <th><%= Tutorial.human_attribute_name(:name) %></th>
      <th><%= Tutorial.human_attribute_name(:link) %></th>
      <th><%= Tutorial.human_attribute_name(:cached_rating) %></th>
      <th><%= Tutorial.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= link_to tutorial.id, tutorial_path(tutorial) %></td>
        <td><%= tutorial.name %></td>
        <td><%= tutorial.link %></td>
        <td><%= tutorial.cached_rating %></td>
        <td><%=l tutorial.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_tutorial_path(tutorial), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tutorial_path(tutorial),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tutorial_path,
            :class => 'btn btn-primary' %>
